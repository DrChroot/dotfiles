#!/bin/bash
AZUL=#6487a7
BLACK=#FF525252
RED=#FFD86F6B
PURPLE=#837490
YELLOW=#FFF3D1A7
BLUE=#FF617C83
WHITE=#FFD2D1D4

function statusbar {

	bat() {
	bat0=$(acpi|cut -d "," -f 2)
	echo $bat0
	}
	
	clock() {
	time=$(date "+%A %b %d %R")
	echo $time
	}

	vol() {
	vol="$(amixer get Master | sed -nr '$ s:.*\[(.+%)].*:\1:p')"
	echo $vol
	}

	kern() {
	kern=$(uname -rms)
	echo $kern
	}

	dkeg() {
	dkeg=$(dkegweather)
	echo $dkeg
	}

	cur() {
	cur=$(mpc current)
	test -n "$cur" && echo $cur || echo "you haz no music going"    
	}

	echo "%{F$RED}LinuxBBQ BORK!  %{B-}%{F-} %{F$AZUL} $(cur) %{B-}%{F-} %{r}% %{F$PURPLE}%$(dkeg) %{B-}%{F-} %{F$WHITE}  %{B-}%{F-} %{F$WHITE}$(vol)% %{F$BLUE}  %{B-}%{F-} %{F$BLUE}$(bat)% %{F$YELLOW}  %{B-}%{F-} %{F$YELLOW}%$(clock) "
}
 while true 
 do
	 echo "$(statusbar)"
	sleep 0.5	
 done | bar -g 1280x20 -f "-artwiz-lime-medium-r-normal--10-110-75-75-m-50-iso8859-1, -misc-stlarch-medium-r-normal--10-100-75-75-c-80-iso10646-1" -B "#FF0C0C0C" -F "#FFD2C5BC" -p -d &
